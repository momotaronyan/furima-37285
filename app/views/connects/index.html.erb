<%= render "shared/header" %>
  <h1 class='info-input-haedline'>
    お問い合わせフォーム
  </h1>
<div class="form-group">
  <form action="https://api.staticforms.xyz/submit" method="post">
  <input type="hidden" name="accessKey" value="bd3430a9-463f-47f3-92b8-8696b807a7d0">
    <div class="item">
      <label class="form-text">お名前</label>
      <input type="text" class="input-default" name="name" required >
    </div>
</div>
<div class="form-group">
    <div class="item">
      <label class="form-text">メールアドレス</label>
      <input type="email" class="input-default" name="email" required >
    </div>
</div>

<div class="form-group">
    <div class="item">
      <p class="form-text">お問い合わせ内容</p>
      <div class="content">
      <input type="radio" name="content" id="i" value="i"><label for="i">出品する商品について</label>
      <input type="radio" name="content" id="c" value="c"><label for="c">支払いカードにについて</label>
      <input type="radio" name="content" id="a" value="a"><label for="a">その他</label>
      </div>
    </div>
</div>

<div class="form-group">
    <div class="situmon">
      <label class="form-text">ご質問</label>
      <textarea class="inputs" name="message" placeholder="ご質問はこちら" required></textarea>
    </div>
</div>

    <div class="button-area">
      <input type="submit" value="送信する" class="sousin" id="back" >
      <%= link_to "もどる", user_path(current_user), class: "modoru" %>
    </div>
  </form>
</div>
<%= render "shared/footer" %>