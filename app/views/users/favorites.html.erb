<%= render "shared/header" %>
<div class="user_item">
  <h1><%= @user.nickname %>さんが"いいね"した商品</h1>
    <ul class="item-lists">
    <% @favorite_items.each do |item| %>
      <li class='itemss'>
      <%= link_to item_path(item.id), method: :get do %>
        <div class='item-img-content'>
          <%= image_tag item.images[0], class: "item-img" %>

        <%# 商品が売れている場の表示 %>
        <% if item.order %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
        <% end %>
        <%# //商品が売れている場の表示装 %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= item.name %>
          </h3>
          <div class='item-price'>
            <span><%= item.price %>円<br><%= item.burden.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'><%= item.favorites.count %></span>
            </div>
          </div>
        </div>
      <% end %>
      </li>
    <% end %>
    </ul>
</div>
<%= render "shared/footer" %>